rssFeedBg = red
rssFeedColor = white


.rssFeed {
	margin 0
	article {
		background black
		padding vr-block(1)
		border-left vr-block(.25) solid $DustBlue
		margin vr-block(0.5) 0
		color rssFeedColor
		&:hover {
			border-left-color $BlueLagoon
		}
		h3 {
			font-size 1.2em
			padding-bottom 1em
			color black
		}
		p {
			color black
			font-size 0.95em
		}
		span {
			display block
			text-align right
			font-size 0.8em
			padding-top 1em
			color black
		}
	}
}

+isAbove($laptop) {
	.rssFeed {
		display flex
		flex-wrap wrap
		justify-content space-around
		margin -(vr-block(0.25))
		article {
			flex 1 1 300px
			margin vr-block(0.25)
		}
	}
}