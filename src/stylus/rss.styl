rssFeedBg = red
rssFeedColor = white


.rssFeed
	margin: 0
	article
		background: black
		padding: 20px
		border-left: 10px solid yellow
		margin: 10px 0
		color: rssFeedColor
		&:hover
			border-left-color link-bg-color
		h3
			font-size: 1.2em
			padding-bottom: 1em
			color: black
		p
			color: black
			font-size: 0.95em
		span
			display block
			text-align right
			font-size 0.8em
			padding-top: 1em
			color: black

@media (min-width 500px)
	.rssFeed
		display: flex
		flex-wrap: wrap
		justify-content space-around
		article
			flex: 1 1 300px
			margin: 5px