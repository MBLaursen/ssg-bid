.article .block-content .NewsletterSignup {
	background $signup_bg
	padding vr-block(.5) vr-block(.25) 0 vr-block(.25)
	margin-bottom vr-block(1)
	color $signup_color
	border solid vr-block(.25) $signup_border_color
	a {
		border-bottom none
		cursor pointer
	}
	form {
		>div {
			display flex
			flex-wrap wrap
			input {
				display inline-block
				flex 1 1 auto
				margin vr-block(.25)
				padding vr-block(.5)
			}
			>div {
				display flex
				flex 1 1 auto
				flex-wrap wrap
			}
			.NewsletterSignup__email {
				flex 1 0 auto
				min-width 200px
			}
		}
		&:after {
			content: " ";
			display: block;
			height: 0;
			clear: both;
		}

		.NewsletterSignup__submit {
			float right
			i {
				font-size 3rem
			}
			span {
				position absolute
				left -9999px
			}
		}
		input.NewsletterSignup_submit {
			display none
		}
	}

	h3, p {
		margin vr-block(.25)
	}
}

