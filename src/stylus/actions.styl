$actionBg = #333 //$SpringGreen
$actionColor = #ddd//#444
$actionCommentColor = #888
$actionPadding = 20px
$actionBorderColor = $OrangePeel

.action-items {
	margin 1em 0
	.action-item {
		position relative
		background $actionBg
		padding $actionPadding
		margin 10px 0
		color $actionColor
		border-left $borderWidth solid $actionBg
		a {
			text-decoration none
			border none
			background-color none
			&:hover {
				background none
			}
		}
		span.action-pdf {
			font-size 1.5em
			position absolute
			+ h2 {
				padding-left 2em
			}
		}
		span.action-comment {
			color $actionCommentColor
			display block
			text-align right
			font-size 0.8em
			position absolute
			right $actionPadding
			top 5px
		}
		h2 {
			font-size 1.0em
			display inline-block
			margin 0
			line-height 1
		}
		&:hover {
			border-left-color $actionBorderColor
		}
	}
}

+isAbove($laptop) {
	.action-items {
		display flex
		flex-wrap wrap
		justify-content flex-start
		.action-item {
			flex 0 1 auto
			margin 5px
		}
	}
}